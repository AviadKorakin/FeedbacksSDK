<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Solid background color -->
    <solid android:color="#2196F3" /> <!-- Blue background color -->

    <!-- Rounded corners -->
    <corners android:radius="8dp" />

    <!-- Padding inside the shape -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />

    <!-- Optional border -->
    <stroke
        android:width="1dp"
        android:color="#1976D2" /> <!-- Slightly darker blue border -->
</shape>
